# This is the httpd conf file
# GlideinWMS VOFrontend web configuration

Alias /factory /var/lib/gwms-factory/web-area
<Directory /var/lib/gwms-factory/web-area>
    <IfModule mod_authz_core.c>
        # Apache 2.4 
        Require all granted
    </IfModule> 
    <IfModule !mod_authz_core.c> 
        # Apache 2.2
        Order allow,deny
        Allow from all
    </IfModule> 
    Options -Indexes
</Directory>

